{
    "extends": "tslint:recommended",
    "rulesDirectory": ["src/"],
    "rules": {
        "ban-ts-ignore": true,
        "member-access": true,
        "no-any": true,
        "no-empty-interface": true,
        "no-import-side-effect": true,
        "semicolon": false,
        "quotemark": false,
        "no-magic-numbers": [true, 0, 1, -1],
        "no-non-null-assertion": true,
        "no-reference": true,
        "no-var-requires": true,
        "prefer-for-of": true,
        "no-for-in": true,
        "promise-function-async": true,
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "member-variable-declaration"
        ],

        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}
